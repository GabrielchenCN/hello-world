<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <script>
    

        function forClass(){
           this.forLoop1 = function(){
                for (i=0,j=0;i<10,j<6;i++,j++){
              var  k=i+j;

            }
            document.write(k+"<br>");
           } ;
            this.forLoop2 = function(){
                 for (i=0,j=0;i<6,j<10;i++,j++){
                     alert(i);
                     alert(j);
               var m=i+j;
            }
          
            document.write(m);
            }
        }
        var loop = new forClass();
        //Guess its value
        loop.forLoop1();
        loop.forLoop2();
    </script>
